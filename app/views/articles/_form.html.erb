<% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved: </h2>
    <% @article.errors.full_messages.each do |e| %>
    <ul>
        <li><%= e %></li>
    </ul>
    <% end %>
    
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :text %>
        <%= f.text_area :text %>
    </p>
    <%= f.submit %>
<% end %>
<%= link_to 'Back', articles_path %>